<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".view.vehicle.NewVehicleFragment">

    <EditText
        android:id="@+id/field_Vehicle_Placa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:autofillHints=""
        android:hint="@string/field_Vehiculo_Placa"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="@color/midnightBlue" />

    <EditText
        android:id="@+id/field_Vehicle_VIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/field_Vehiculo_VIN"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="@color/midnightBlue" />

    <EditText
        android:id="@+id/field_Vehicle_Marca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/field_Vehiculo_Marca"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="@color/midnightBlue" />

    <EditText
        android:id="@+id/field_Vehicle_Serie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/field_Vehiculo_Serie"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="@color/midnightBlue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="20dp"
                android:text="@string/typeSpinner"
                android:textColor="@color/darkBlue"
                android:textColorHint="@color/midnightBlue" />

            <Spinner
                android:id="@+id/field_Vehicle_Tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:contentDescription="@string/field_Vehiculo_cd_Tipo"
                android:minHeight="48dp"
                android:spinnerMode="dialog"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="194dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_motor_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/motor_type_spinner"
                android:textColor="@color/darkBlue" />

            <Spinner
                android:id="@+id/field_Vehicle_TipoMotor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:contentDescription="@string/field_Vehiculo_cd_TipoMotor"
                android:minHeight="50dp"
                android:spinnerMode="dialog" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_Vehicle_SubmitNew"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:text="@string/generic_Insert" />

</LinearLayout>