<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mistyBlue"
    android:orientation="vertical"
    tools:context=".view.ReparationDetailsFragment">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/detalle_reparaciones"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/mistyBlue"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/id_detail"
            android:textColor="@color/midnightBlue" />

        <TextView
            android:id="@+id/cedula_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cedula_detail"
            android:textColor="@color/midnightBlue" />

        <TextView
            android:id="@+id/client_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/client_detail"
            android:textColor="@color/midnightBlue" />

        <TextView
            android:id="@+id/plate_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placa_detail"
            android:textColor="@color/midnightBlue" />

        <TextView
            android:id="@+id/services_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/services_detail"
            android:textColor="@color/midnightBlue" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/service_List"
            android:layout_width="300dp"
            android:layout_height="399dp"
            android:layout_gravity="center"

            android:scrollbars="vertical"
            tools:listitem="@layout/service_list_item" />

    </LinearLayout>

</LinearLayout>